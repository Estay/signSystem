@model SAS.Models.Order_info

@{
    ViewBag.Title = "待审核订单";
    ViewBag.my_oder = "set";
}

<div id="flag_box">
	<a href="/Order/MyOrder" class="btn_c ">未确认订单</a>
	<a href="/Order/CheckOrder" class="btn_c set">待审核订单</a>
	<a href="/Order/QueryOrder" class="btn_c">订单查询</a>
</div>
<div class="box_a">
	<table cellspacing="0">
		<tbody>
			<tr>
				<th>&nbsp;</th>
				<th>订单号</th>
				<th>公寓名称</th>
				<th>房型</th>
				<th>入住人</th>
				<th>电话号码</th>
				<th>入住日期</th>
				<th>离店日期</th>
				<th>总价</th>
				<th>状态</th>
				<th>备注</th>
				<th>操作</th>
			</tr>
            
            @if (Model.OrderList.Count == 0)
            {
                <tr>
                    <td colspan="12">暂无订单</td>
                </tr>
            }
            else {
                foreach (var o in Model.OrderList)
                {
               		<!-- 订单数据 -->
			        <tr>
				    <td>@if(o.o_guaranteePrice>0)
                        {
                           <span class="danbao_ico">担保</span>
                        }
				    </td>
				    <td>@o.o_SerialId</td>
				    <td>@o.hotel_name</td>
				    <td>@o.room_name</td>
				    <td>@o.o_other_guest_info</td>
				    <td>@o.o_user_phone</td>
				    <td>@o.o_check_in_date</td>
				    <td>@o.o_check_out_date</td>
				    <td>@o.o_total_price</td>
				    <td>已确认</td>
				    <td>@o.o_remark</td>
				    <td><a href="" class="operation_order"  order_id="@o.order_id">审核</a></td>
			        </tr> 
                }
            }

            
	
		</tbody>
	</table>
</div>


<!-- 弹窗 -->
<div class="set_box hide">

<!-- 表单 -->
@using (Html.BeginForm("orderCheckSubmit", "order", FormMethod.Post))
{
	<!-- 订单ID -->
	<input type="text" class="order_id hide"  name="@Html.DisplayNameFor(model => model.order_id)" >

	<!-- 状态 -->
	<p class="input_line">
		<label class="status_order"><input name="@Html.DisplayNameFor(model => model.o_state_id)" type="radio" value="3"><span>已入住</span></label>&nbsp;&nbsp;&nbsp;&nbsp;
		<label class="status_order"><input name="@Html.DisplayNameFor(model => model.o_state_id)" type="radio" value="31"><span>未到店</span></label><br>
		<label class="status_order"><input name="@Html.DisplayNameFor(model => model.o_state_id)" type="radio" value="4"><span>已结账</span></label>&nbsp;&nbsp;&nbsp;&nbsp;
	</p>

	<!-- 房号 -->
	<p class="input_line hide">
		<input type="text" class="w50" name="xxxxx" placeholder="房号">
	</p>
	<br>
	<!-- 备注 -->
	<textarea class="hide"  name="@Html.DisplayNameFor(model => model.o_remark)"  placeholder="备注"></textarea>
	<p class="t_ac m_t20">
		<a href="" class="btn_b modify_order_status_btn">确定</a>
		<a href="" class="close_win btn_b">取消</a>
	</p>
}
</div>
